<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ISBN">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.ISBN">Delete</a>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</div>
