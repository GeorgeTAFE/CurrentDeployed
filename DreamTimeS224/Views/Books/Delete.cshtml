@model DreamTimeS224.Models.Book

@{
    ViewData["Title"] = "Delete book";
}

<h1>@ViewData["Title"]</h1>

<hr />

<p>Are you sure you want to delete the 
    <strong>
        @Html.DisplayFor(b => b.ISBN):
        @Html.DisplayFor(b => b.Title)
        (@Html.DisplayFor(b => b.Edition))
    </strong>
    book?</p>

<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ISBN" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
